{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    //"declaration": true,
    //"declarationDir": "build/types",
    "esModuleInterop": true,
    "strictNullChecks": false,
    //"outDir": "./build",
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "module": "es2020",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/build",
    "**/dist",
    "**/*.md",
    "**/rollup.config.js"
  ]
}